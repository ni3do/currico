{
  "name": "easy-lehrer",
  "version": "1.0.0",
  "description": "Educational resource marketplace for Swiss teachers",
  "prisma": {
    "seed": "npx tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "prisma db seed",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:build": "docker compose build --no-cache",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:db:push": "docker compose exec app npx prisma db push",
    "docker:db:migrate": "docker compose exec app npx prisma migrate dev",
    "docker:db:studio": "docker compose exec app npx prisma studio",
    "docker:shell": "docker compose exec app sh",
    "prepare": "husky",
    "validate:all": "npm run lint && npm run build && npm run test:run"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/s3-request-presigner": "^3.975.0",
    "@prisma/client": "^6.19.2",
    "@stripe/stripe-js": "^8.6.1",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.29.0",
    "lucide-react": "^0.562.0",
    "mysql2": "^3.11.0",
    "next": "^16.1.1",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.7.0",
    "nodemailer": "^7.0.12",
    "pdf-to-img": "^5.0.0",
    "prisma": "^6.19.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "resend": "^6.7.0",
    "sharp": "^0.34.5",
    "stripe": "^20.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.5",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "bash -c 'tsc --noEmit'"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "hono": "4.11.4",
    "@auth/core": "0.41.1"
  }
}
