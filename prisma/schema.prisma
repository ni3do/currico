// Prisma schema for Currico - Swiss Teaching Materials Marketplace
// Database: PostgreSQL 16

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================
// NEXTAUTH.JS MODELS - Required for OAuth authentication
// ============================================================

model Account {
  id                String  @id @default(cuid()) @db.VarChar(50)
  userId            String  @db.VarChar(50)
  type              String  @db.VarChar(50)
  provider          String  @db.VarChar(50)
  providerAccountId String  @db.VarChar(255)
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String? @db.VarChar(50)
  scope             String? @db.VarChar(500)
  id_token          String? @db.Text
  session_state     String? @db.VarChar(255)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid()) @db.VarChar(50)
  sessionToken String   @unique @db.VarChar(255)
  userId       String   @db.VarChar(50)
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("sessions")
}

model VerificationToken {
  identifier String   @db.VarChar(255)
  token      String   @unique @db.VarChar(255)
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model EmailVerificationToken {
  id         String   @id @default(cuid()) @db.VarChar(50)
  token      String   @unique @db.VarChar(255)
  expires    DateTime
  created_at DateTime @default(now())

  user_id String @db.VarChar(50)
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("email_verification_tokens")
}

// ============================================================
// USER MODEL - Seller Profile
// ============================================================

model User {
  // ============ IDENTITY (System) ============
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // ============ NEXTAUTH.JS REQUIRED FIELDS ============
  name          String?   @db.VarChar(255)
  email         String    @unique @db.VarChar(255)
  emailVerified DateTime?
  image         String?   @db.VarChar(500)

  // ============ PUBLIC PROFILE DATA ============
  display_name String? @db.VarChar(100)
  bio          String? @db.Text
  subjects     Json    @default("[]")
  cycles       Json    @default("[]")
  cantons      Json    @default("[]")

  // Additional profile fields
  website             String? @db.VarChar(255)
  school              String? @db.VarChar(150)
  teaching_experience String? @db.VarChar(20)
  preferred_language  String  @default("de") @db.VarChar(5)

  // Social Media Links (usernames only)
  instagram    String? @db.VarChar(100)
  pinterest    String? @db.VarChar(100)

  // ============ PRIVATE DATA ============
  password_hash String? @db.VarChar(255)

  // ============ LOGIC/STATUS FIELDS ============
  role         UserRole @default(BUYER)
  is_protected Boolean  @default(false)
  is_private   Boolean  @default(false)

  // ============ TEACHER VERIFICATION ============
  is_teacher_verified          Boolean   @default(false)
  teacher_verified_at          DateTime?
  teacher_verification_method  String?   @db.VarChar(50) // "email_domain" | "manual" | "eduid"

  // ============ SELLER REWARD LEVEL ============
  seller_level Int @default(0) @db.SmallInt
  seller_xp    Int @default(0)

  // ============ VERIFIED SELLER ============
  is_verified_seller           Boolean   @default(false)
  verified_seller_at           DateTime?
  verified_seller_method       String?   @db.VarChar(50) // "auto" | "manual"

  // ============ STRIPE CONNECT ============
  stripe_account_id          String?   @db.VarChar(255)
  stripe_onboarding_complete Boolean   @default(false)
  stripe_charges_enabled     Boolean   @default(false)
  stripe_payouts_enabled     Boolean   @default(false)
  stripe_customer_id         String?   @db.VarChar(255)
  seller_terms_accepted_at   DateTime?

  // ============ NOTIFICATION PREFERENCES ============
  notify_new_from_followed    Boolean @default(true)
  notify_recommendations      Boolean @default(true)
  notify_material_updates     Boolean @default(true)
  notify_review_reminders     Boolean @default(true)
  notify_wishlist_price_drops Boolean @default(true)
  notify_welcome_offers       Boolean @default(true)
  notify_sales                Boolean @default(true)
  notify_newsletter           Boolean @default(false)
  notify_platform_updates     Boolean @default(true)

  // ============ RELATIONS ============
  accounts                Account[]
  sessions                Session[]
  resources               Resource[]
  transactions            Transaction[]
  downloads               Download[]
  wishlists               Wishlist[]
  emailVerificationTokens EmailVerificationToken[]

  // Report relations
  reports_submitted Report[] @relation("Reporter")
  reports_received  Report[] @relation("ReportedUser")
  reports_handled   Report[] @relation("ReportHandler")

  // Following relations
  followers Follow[] @relation("Following")
  following Follow[] @relation("Followers")

  // Bundle relations
  bundles Bundle[]

  // Collection relations
  collections Collection[]

  // Draft relations
  drafts Draft[]

  // Review and rating relations
  resourceLikes ResourceLike[]
  reviews       Review[]
  comments      Comment[]
  commentReplies CommentReply[]
  commentLikes  CommentLike[]

  @@index([role])
  @@map("users")
}

enum UserRole {
  BUYER
  SELLER
  SCHOOL
  ADMIN
}

enum ResourceStatus {
  PENDING
  VERIFIED
  REJECTED
}

enum Dialect {
  STANDARD
  SWISS
  BOTH
}

// ============================================================
// RESOURCE MODEL - Teaching Materials
// ============================================================

model Resource {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  title       String @db.VarChar(255)
  description String @db.Text
  price       Int
  file_url    String @db.VarChar(500)
  preview_url String? @db.VarChar(500)

  // Multi-page preview support
  preview_urls  Json @default("[]")   // Array of preview image URLs for pages 1-3
  preview_count Int  @default(1) @db.SmallInt

  subjects Json @default("[]")
  cycles   Json @default("[]")

  is_published Boolean @default(false)
  is_approved  Boolean @default(false)

  // Document verification workflow
  status    ResourceStatus @default(PENDING)
  is_public Boolean        @default(false)

  // Swiss Quality Checks
  eszett_checked Boolean @default(false)
  swiss_verified Boolean @default(false)
  language       String  @default("de") @db.VarChar(5)
  dialect        Dialect @default(BOTH)

  // Full-text search vector (managed by database trigger)
  search_vector  Unsupported("tsvector")?

  // Relations
  seller_id    String       @db.VarChar(50)
  seller       User         @relation(fields: [seller_id], references: [id])
  transactions Transaction[]
  downloads    Download[]
  wishlists    Wishlist[]
  reports      Report[]

  // Curriculum alignment
  competencies ResourceCompetency[]
  lehrmittel   ResourceLehrmittel[]

  // LP21 cross-curricular features
  is_mi_integrated Boolean               @default(false)
  transversals     ResourceTransversal[]
  bne_themes       ResourceBne[]

  // Bundle relations
  bundleResources BundleResource[]

  // Collection relations
  collectionItems CollectionItem[]

  // Review and rating relations
  likes    ResourceLike[]
  reviews  Review[]
  comments Comment[]

  @@index([seller_id])
  @@index([is_published, is_public])
  @@index([status])
  @@index([created_at])
  @@map("resources")
}

// ============================================================
// TRANSACTION MODEL - Purchases
// ============================================================

model Transaction {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())

  amount Int             
  status TransactionStatus @default(PENDING)

  // Payment tracking
  stripe_payment_intent_id   String? @unique @db.VarChar(255)
  stripe_checkout_session_id String? @db.VarChar(255)
  payment_method             String? @db.VarChar(50)

  // Swiss QR-Bill invoice fields
  invoice_number  String? @unique @db.VarChar(50)
  invoice_pdf_url String? @db.VarChar(500)

  // Fee breakdown (stored for historical accuracy)
  platform_fee_amount  Int?
  seller_payout_amount Int?

  // Guest checkout
  guest_email String? @db.VarChar(255)

  // Relations
  buyer_id       String?         @db.VarChar(50)
  buyer          User?           @relation(fields: [buyer_id], references: [id])
  resource_id    String          @db.VarChar(50)
  resource       Resource        @relation(fields: [resource_id], references: [id])
  downloadTokens DownloadToken[]

  @@index([buyer_id])
  @@index([resource_id])
  @@index([status])
  @@map("transactions")
}

model DownloadToken {
  id             String   @id @default(cuid()) @db.VarChar(50)
  token          String   @unique @db.VarChar(255)
  expires_at     DateTime
  download_count Int      @default(0) @db.SmallInt
  max_downloads  Int      @default(5) @db.SmallInt
  created_at     DateTime @default(now())

  transaction_id String      @db.VarChar(50)
  transaction    Transaction @relation(fields: [transaction_id], references: [id], onDelete: Cascade)

  @@index([transaction_id])
  @@index([expires_at])
  @@map("download_tokens")
}

enum TransactionStatus {
  PENDING
  COMPLETED
  REFUNDED
  FAILED
}

// ============================================================
// REPORT MODEL - Content Moderation
// ============================================================

model Report {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  reason      String       @db.VarChar(50)
  description String?      @db.Text
  status      ReportStatus @default(OPEN)
  resolution  String?      @db.Text

  // What is being reported (either a resource or a user)
  resource_id String?   @db.VarChar(50)
  resource    Resource? @relation(fields: [resource_id], references: [id], onDelete: SetNull)

  reported_user_id String? @db.VarChar(50)
  reported_user    User?   @relation("ReportedUser", fields: [reported_user_id], references: [id], onDelete: SetNull)

  // Who submitted the report
  reporter_id String @db.VarChar(50)
  reporter    User   @relation("Reporter", fields: [reporter_id], references: [id], onDelete: Cascade)

  // Admin who handled the report
  handled_by_id String?   @db.VarChar(50)
  handled_by    User?     @relation("ReportHandler", fields: [handled_by_id], references: [id], onDelete: SetNull)
  handled_at    DateTime?

  @@index([reporter_id])
  @@index([status])
  @@map("reports")
}

enum ReportStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  DISMISSED
}

// ============================================================
// CONTACT MESSAGE MODEL - Contact Form Submissions
// ============================================================

model ContactMessage {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())

  name    String               @db.VarChar(100)
  email   String               @db.VarChar(255)
  phone   String?              @db.VarChar(50)
  subject String               @db.VarChar(255)
  message String               @db.Text
  status  ContactMessageStatus @default(NEW)

  @@index([status])
  @@map("contact_messages")
}

enum ContactMessageStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
}

// ============================================================
// CURRICULUM MODELS - Lehrplan 21 (LP21) & PER
// ============================================================

model Curriculum {
  id      String  @id @default(cuid()) @db.VarChar(50)
  code    String  @unique @db.VarChar(10)
  name_de String  @db.VarChar(100)
  name_fr String? @db.VarChar(100)
  name_it String? @db.VarChar(100)
  region  String  @db.VarChar(10)

  subjects CurriculumSubject[]

  @@map("curricula")
}

model CurriculumSubject {
  id      String  @id @default(cuid()) @db.VarChar(50)
  code    String  @db.VarChar(10)
  name_de String  @db.VarChar(100)
  name_fr String? @db.VarChar(100)
  name_it String? @db.VarChar(100)
  color   String? @db.VarChar(7)
  icon    String? @db.VarChar(50)

  curriculum_id String     @db.VarChar(50)
  curriculum    Curriculum @relation(fields: [curriculum_id], references: [id], onDelete: Cascade)

  competencies CurriculumCompetency[]

  @@unique([curriculum_id, code])
  @@index([curriculum_id])
  @@map("curriculum_subjects")
}

model CurriculumCompetency {
  id             String  @id @default(cuid()) @db.VarChar(50)
  code           String  @unique @db.VarChar(20)
  description_de String  @db.Text
  description_fr String? @db.Text
  description_it String? @db.Text
  cycle          Int     @db.SmallInt

  // Hierarchy levels for LP21
  kompetenzbereich String? @db.VarChar(100)
  handlungsaspekt  String? @db.VarChar(100)

  // Requirement level: "grund" (basic) | "erweitert" (extended) | null (both)
  anforderungsstufe String? @db.VarChar(20)

  // Self-referential hierarchy for nested competencies
  parent_id String?                @db.VarChar(50)
  parent    CurriculumCompetency?  @relation("CompetencyHierarchy", fields: [parent_id], references: [id], onDelete: SetNull)
  children  CurriculumCompetency[] @relation("CompetencyHierarchy")

  subject_id String            @db.VarChar(50)
  subject    CurriculumSubject @relation(fields: [subject_id], references: [id], onDelete: Cascade)

  resources ResourceCompetency[]

  @@index([subject_id])
  @@index([cycle])
  @@map("curriculum_competencies")
}

// ============================================================
// LEHRMITTEL (TEXTBOOK) MODEL - Canton-specific textbooks
// ============================================================

model Lehrmittel {
  id        String @id @default(cuid()) @db.VarChar(50)
  name      String @db.VarChar(255)
  publisher String @db.VarChar(100)
  subject   String @db.VarChar(10)
  cantons   Json   @default("[]")
  cycles    Json   @default("[]")

  resources ResourceLehrmittel[]

  @@index([subject])
  @@map("lehrmittel")
}

// ============================================================
// TRANSVERSAL COMPETENCIES - Überfachliche Kompetenzen
// ============================================================

model TransversalCompetency {
  id             String  @id @default(cuid()) @db.VarChar(50)
  code           String  @unique @db.VarChar(10)
  category       String  @db.VarChar(20)
  name_de        String  @db.VarChar(100)
  name_fr        String? @db.VarChar(100)
  description_de String  @db.Text
  description_fr String? @db.Text
  icon           String? @db.VarChar(50)
  color          String? @db.VarChar(7)

  resources ResourceTransversal[]

  @@map("transversal_competencies")
}

// ============================================================
// BNE THEMES - Bildung für Nachhaltige Entwicklung
// ============================================================

model BneTheme {
  id             String  @id @default(cuid()) @db.VarChar(50)
  code           String  @unique @db.VarChar(10)
  name_de        String  @db.VarChar(100)
  name_fr        String? @db.VarChar(100)
  description_de String  @db.Text
  description_fr String? @db.Text
  sdg_number     Int?    @db.SmallInt
  icon           String? @db.VarChar(50)
  color          String? @db.VarChar(7)

  resources ResourceBne[]

  @@map("bne_themes")
}

// ============================================================
// JUNCTION TABLES - Many-to-many relations
// ============================================================

model ResourceCompetency {
  resource_id   String               @db.VarChar(50)
  resource      Resource             @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  competency_id String               @db.VarChar(50)
  competency    CurriculumCompetency @relation(fields: [competency_id], references: [id], onDelete: Cascade)

  @@id([resource_id, competency_id])
  @@index([competency_id])
  @@map("resource_competencies")
}

model ResourceLehrmittel {
  resource_id   String     @db.VarChar(50)
  resource      Resource   @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  lehrmittel_id String     @db.VarChar(50)
  lehrmittel    Lehrmittel @relation(fields: [lehrmittel_id], references: [id], onDelete: Cascade)

  @@id([resource_id, lehrmittel_id])
  @@index([lehrmittel_id])
  @@map("resource_lehrmittel")
}

model ResourceTransversal {
  resource_id    String                @db.VarChar(50)
  resource       Resource              @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  transversal_id String                @db.VarChar(50)
  transversal    TransversalCompetency @relation(fields: [transversal_id], references: [id], onDelete: Cascade)

  @@id([resource_id, transversal_id])
  @@index([transversal_id])
  @@map("resource_transversals")
}

model ResourceBne {
  resource_id String   @db.VarChar(50)
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  bne_id      String   @db.VarChar(50)
  bne         BneTheme @relation(fields: [bne_id], references: [id], onDelete: Cascade)

  @@id([resource_id, bne_id])
  @@index([bne_id])
  @@map("resource_bne")
}

// ============================================================
// DOWNLOAD MODEL - Track free resource downloads
// ============================================================

model Download {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())

  // Relations
  user_id     String   @db.VarChar(50)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  resource_id String   @db.VarChar(50)
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([user_id, resource_id])
  @@index([resource_id])
  @@map("downloads")
}

// ============================================================
// WISHLIST MODEL - Save resources for later
// ============================================================

model Wishlist {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())

  // Relations
  user_id     String   @db.VarChar(50)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  resource_id String   @db.VarChar(50)
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([user_id, resource_id])
  @@index([resource_id])
  @@map("wishlists")
}

// ============================================================
// FOLLOW MODEL - User follows sellers
// ============================================================

model Follow {
  id          String   @id @default(cuid()) @db.VarChar(50)
  created_at  DateTime @default(now())
  follower_id String   @db.VarChar(50)
  follower    User     @relation("Followers", fields: [follower_id], references: [id], onDelete: Cascade)
  followed_id String   @db.VarChar(50)
  followed    User     @relation("Following", fields: [followed_id], references: [id], onDelete: Cascade)

  @@unique([follower_id, followed_id])
  @@index([followed_id])
  @@map("follows")
}

// ============================================================
// COLLECTION MODEL - User-created resource collections/folders
// ============================================================

model Collection {
  id          String   @id @default(cuid()) @db.VarChar(50)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  name        String   @db.VarChar(100)
  description String?  @db.Text
  is_public   Boolean  @default(true)
  position    Int      @default(0) @db.SmallInt

  owner_id String @db.VarChar(50)
  owner    User   @relation(fields: [owner_id], references: [id], onDelete: Cascade)

  items CollectionItem[]

  @@index([owner_id])
  @@map("collections")
}

model CollectionItem {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())
  position   Int      @default(0) @db.SmallInt

  collection_id String     @db.VarChar(50)
  collection    Collection @relation(fields: [collection_id], references: [id], onDelete: Cascade)
  resource_id   String     @db.VarChar(50)
  resource      Resource   @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([collection_id, resource_id])
  @@index([resource_id])
  @@map("collection_items")
}

// ============================================================
// BUNDLE MODEL - Resource bundles at discounted prices
// ============================================================

model Bundle {
  id              String         @id @default(cuid()) @db.VarChar(50)
  created_at      DateTime       @default(now())
  updated_at      DateTime       @updatedAt
  title           String         @db.VarChar(255)
  description     String?        @db.Text
  price           Int           
  subject         Json           @default("[]")
  cycle           Json           @default("[]")
  cover_image_url String?        @db.VarChar(500)
  is_published    Boolean        @default(false)
  status          ResourceStatus @default(PENDING)

  seller_id String @db.VarChar(50)
  seller    User   @relation(fields: [seller_id], references: [id], onDelete: Cascade)

  resources BundleResource[]

  @@index([seller_id])
  @@index([is_published])
  @@map("bundles")
}

model BundleResource {
  id          String   @id @default(cuid()) @db.VarChar(50)
  bundle_id   String   @db.VarChar(50)
  bundle      Bundle   @relation(fields: [bundle_id], references: [id], onDelete: Cascade)
  resource_id String   @db.VarChar(50)
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([bundle_id, resource_id])
  @@index([resource_id])
  @@map("bundle_resources")
}

// ============================================================
// RATING & REVIEW MODELS - User feedback on resources
// ============================================================

// Resource Like - simple like toggle (heart icon)
model ResourceLike {
  id          String   @id @default(cuid()) @db.VarChar(50)
  created_at  DateTime @default(now())
  user_id     String   @db.VarChar(50)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  resource_id String   @db.VarChar(50)
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([user_id, resource_id])
  @@index([resource_id])
  @@map("resource_likes")
}

// Review - star rating (1-5) with optional text
model Review {
  id          String   @id @default(cuid()) @db.VarChar(50)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  rating      Int      @db.SmallInt // 1-5
  title       String?  @db.VarChar(100)
  content     String?  @db.Text
  user_id     String   @db.VarChar(50)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  resource_id String   @db.VarChar(50)
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([user_id, resource_id])
  @@index([resource_id])
  @@map("reviews")
}

// Comment - discussion on resources
model Comment {
  id          String         @id @default(cuid()) @db.VarChar(50)
  created_at  DateTime       @default(now())
  updated_at  DateTime       @updatedAt
  content     String         @db.Text
  user_id     String         @db.VarChar(50)
  user        User           @relation(fields: [user_id], references: [id], onDelete: Cascade)
  resource_id String         @db.VarChar(50)
  resource    Resource       @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  replies     CommentReply[]
  likes       CommentLike[]

  @@index([resource_id])
  @@map("comments")
}

// CommentReply - single-level replies to comments
model CommentReply {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  content    String   @db.Text
  user_id    String   @db.VarChar(50)
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  comment_id String   @db.VarChar(50)
  comment    Comment  @relation(fields: [comment_id], references: [id], onDelete: Cascade)

  @@index([comment_id])
  @@map("comment_replies")
}

// CommentLike - likes on comments
model CommentLike {
  id         String   @id @default(cuid()) @db.VarChar(50)
  created_at DateTime @default(now())
  user_id    String   @db.VarChar(50)
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  comment_id String   @db.VarChar(50)
  comment    Comment  @relation(fields: [comment_id], references: [id], onDelete: Cascade)

  @@unique([user_id, comment_id])
  @@index([comment_id])
  @@map("comment_likes")
}

