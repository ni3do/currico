// Prisma schema for Easy Lehrer - Swiss Teaching Materials Marketplace

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================
// NEXTAUTH.JS MODELS - Required for OAuth authentication
// ============================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Email verification tokens for confirming user email addresses
model EmailVerificationToken {
  id         String   @id @default(cuid())
  token      String   @unique
  expires    DateTime
  created_at DateTime @default(now())

  user_id String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("email_verification_tokens")
}

// ============================================================
// USER MODEL - Seller Profile
// ============================================================

model User {
  // ============ IDENTITY (System) ============
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // ============ NEXTAUTH.JS REQUIRED FIELDS ============
  name          String? // Display name from OAuth provider
  email         String    @unique
  emailVerified DateTime? // When email was verified
  image         String? // Avatar from OAuth provider

  // ============ PUBLIC PROFILE DATA ============
  display_name String? // Custom pseudonym for privacy (e.g., "Frau M.")
  bio          String?  @db.Text // "About me" - max 500 chars
  subjects     String[] // ["Mathematik", "Deutsch", "NMG"]
  cycles       String[] // ["Zyklus 1", "Zyklus 2", "Zyklus 3"]
  cantons      String[] // ["Zürich", "Bern"] - Swiss cantons

  // ============ PRIVATE DATA ============
  password_hash String? // For credential-based auth

  // ============ ROLE & STATUS ============
  role         UserRole @default(BUYER)
  is_protected Boolean  @default(false) // Protected users cannot be deleted (e.g., super admin)

  // ============ STRIPE ============
  stripe_customer_id         String? // Buyer's Stripe customer ID
  stripe_account_id          String? // Seller's Stripe Connect Express account ID
  stripe_onboarding_complete Boolean @default(false)
  stripe_charges_enabled     Boolean @default(false) // Synced from Stripe webhook
  stripe_payouts_enabled     Boolean @default(false) // Synced from Stripe webhook

  // ============ SELLER ============
  seller_terms_accepted_at DateTime? // When seller accepted terms

  // ============ RELATIONS ============
  accounts                Account[]
  sessions                Session[]
  emailVerificationTokens EmailVerificationToken[]
  resources               Resource[]
  transactions            Transaction[]
  downloads               Download[]
  wishlists               Wishlist[]

  // Report relations
  reports_submitted Report[] @relation("Reporter")
  reports_received  Report[] @relation("ReportedUser")
  reports_handled   Report[] @relation("ReportHandler")

  @@map("users")
}

enum UserRole {
  BUYER
  SELLER
  ADMIN
}

enum ResourceStatus {
  PENDING
  VERIFIED
  REJECTED
}

// ============================================================
// RESOURCE MODEL - Teaching Materials
// ============================================================

model Resource {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  title       String
  description String  @db.Text
  price       Int // Price in cents (e.g., 500 = 5.00 CHF)
  file_url    String // URL to the resource file
  preview_url String? // Preview image URL

  subjects String[]
  cycles   String[]

  is_published Boolean @default(false)
  is_approved  Boolean @default(false) // Admin approval

  // Document verification workflow
  status    ResourceStatus @default(PENDING) // pending, verified, rejected
  is_public Boolean        @default(false) // Only visible to others when true

  // Swiss Quality Checks
  eszett_checked Boolean @default(false) // Checked for ß (should use ss)
  swiss_verified Boolean @default(false) // Admin verified Swiss quality
  language       String  @default("de") // de, fr, it

  // Relations
  seller_id    String
  seller       User          @relation(fields: [seller_id], references: [id])
  transactions Transaction[]
  downloads    Download[]
  wishlists    Wishlist[]
  reports      Report[]

  // Curriculum alignment
  competencies ResourceCompetency[]
  lehrmittel   ResourceLehrmittel[]

  // LP21 cross-curricular features
  is_mi_integrated Boolean               @default(false) // Medien & Informatik integration
  transversals     ResourceTransversal[]
  bne_themes       ResourceBne[]

  @@map("resources")
}

// ============================================================
// TRANSACTION MODEL - Purchases
// ============================================================

model Transaction {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())

  amount Int // Amount in cents
  status TransactionStatus @default(PENDING)

  // Payment tracking
  stripe_payment_intent_id   String? @unique
  stripe_checkout_session_id String?
  payment_method             String? // "card", "twint", "invoice"

  // Swiss QR-Bill invoice fields
  invoice_number  String? @unique
  invoice_pdf_url String?

  // Fee breakdown (stored for historical accuracy)
  platform_fee_amount  Int? // Platform fee in cents
  seller_payout_amount Int? // Amount to seller in cents

  // Guest checkout (when buyer_id is null)
  guest_email String? // Email for guest purchases

  // Relations
  buyer_id    String? // Nullable for guest checkout
  buyer       User?    @relation(fields: [buyer_id], references: [id])
  resource_id String
  resource    Resource @relation(fields: [resource_id], references: [id])

  // Guest download tokens
  download_tokens DownloadToken[]

  @@map("transactions")
}

enum TransactionStatus {
  PENDING
  COMPLETED
  REFUNDED
  FAILED
}

// ============================================================
// REPORT MODEL - Content Moderation
// ============================================================

model Report {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  reason      String // Category: "copyright", "inappropriate", "spam", "fraud", "other"
  description String?      @db.Text // Detailed description from reporter
  status      ReportStatus @default(OPEN)
  resolution  String?      @db.Text // Admin notes on resolution

  // What is being reported (either a resource or a user)
  resource_id String?
  resource    Resource? @relation(fields: [resource_id], references: [id], onDelete: SetNull)

  reported_user_id String?
  reported_user    User?   @relation("ReportedUser", fields: [reported_user_id], references: [id], onDelete: SetNull)

  // Who submitted the report
  reporter_id String
  reporter    User   @relation("Reporter", fields: [reporter_id], references: [id], onDelete: Cascade)

  // Admin who handled the report
  handled_by_id String?
  handled_by    User?     @relation("ReportHandler", fields: [handled_by_id], references: [id], onDelete: SetNull)
  handled_at    DateTime?

  @@map("reports")
}

enum ReportStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  DISMISSED
}

// ============================================================
// CONTACT MESSAGE MODEL - Contact Form Submissions
// ============================================================

model ContactMessage {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())

  name    String
  email   String
  phone   String?
  subject String
  message String               @db.Text
  status  ContactMessageStatus @default(NEW)

  @@map("contact_messages")
}

enum ContactMessageStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
}

// ============================================================
// CURRICULUM MODELS - Lehrplan 21 (LP21) & PER
// ============================================================

model Curriculum {
  id      String  @id @default(cuid())
  code    String  @unique // "LP21", "PER"
  name_de String
  name_fr String?
  name_it String?
  region  String // "de-CH", "fr-CH", "it-CH"

  subjects CurriculumSubject[]

  @@map("curricula")
}

model CurriculumSubject {
  id      String  @id @default(cuid())
  code    String // "MA", "D", "NMG", etc.
  name_de String
  name_fr String?
  name_it String?
  color   String? // LP21 official color scheme (hex)
  icon    String? // Optional icon identifier

  curriculum_id String
  curriculum    Curriculum @relation(fields: [curriculum_id], references: [id], onDelete: Cascade)

  competencies CurriculumCompetency[]

  @@unique([curriculum_id, code])
  @@map("curriculum_subjects")
}

model CurriculumCompetency {
  id             String  @id @default(cuid())
  code           String  @unique // "MA.1.A.1", "MA.1.A.2", etc.
  description_de String  @db.Text
  description_fr String? @db.Text
  description_it String? @db.Text
  cycle          Int // 1, 2, or 3

  // Hierarchy levels for LP21
  kompetenzbereich String? // Competency Area (Level 2)
  handlungsaspekt  String? // Action/Theme Aspect (Level 3)

  // Requirement level: "grund" (basic) | "erweitert" (extended) | null (both)
  anforderungsstufe String?

  // Self-referential hierarchy for nested competencies
  parent_id String?
  parent    CurriculumCompetency?  @relation("CompetencyHierarchy", fields: [parent_id], references: [id], onDelete: SetNull)
  children  CurriculumCompetency[] @relation("CompetencyHierarchy")

  subject_id String
  subject    CurriculumSubject @relation(fields: [subject_id], references: [id], onDelete: Cascade)

  resources ResourceCompetency[]

  @@map("curriculum_competencies")
}

// ============================================================
// LEHRMITTEL (TEXTBOOK) MODEL - Canton-specific textbooks
// ============================================================

model Lehrmittel {
  id        String   @id @default(cuid())
  name      String
  publisher String
  subject   String // Subject code: "MA", "D", "F", etc.
  cantons   String[] // Which cantons use this textbook
  cycles    Int[] // Which cycles: [1], [1,2], [2,3], etc.

  resources ResourceLehrmittel[]

  @@map("lehrmittel")
}

// ============================================================
// TRANSVERSAL COMPETENCIES - Überfachliche Kompetenzen
// ============================================================

model TransversalCompetency {
  id             String  @id @default(cuid())
  code           String  @unique // "PK.1", "SK.1", "MK.1"
  category       String // "personale" | "soziale" | "methodische"
  name_de        String
  name_fr        String?
  description_de String  @db.Text
  description_fr String? @db.Text
  icon           String? // Icon identifier
  color          String? // Hex color code

  resources ResourceTransversal[]

  @@map("transversal_competencies")
}

// ============================================================
// BNE THEMES - Bildung für Nachhaltige Entwicklung
// ============================================================

model BneTheme {
  id             String  @id @default(cuid())
  code           String  @unique // "BNE.1", "BNE.2", etc.
  name_de        String
  name_fr        String?
  description_de String  @db.Text
  description_fr String? @db.Text
  sdg_number     Int? // UN Sustainable Development Goal alignment (1-17)
  icon           String? // Icon identifier
  color          String? // Hex color code

  resources ResourceBne[]

  @@map("bne_themes")
}

// ============================================================
// JUNCTION TABLES - Many-to-many relations
// ============================================================

model ResourceCompetency {
  resource_id   String
  resource      Resource             @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  competency_id String
  competency    CurriculumCompetency @relation(fields: [competency_id], references: [id], onDelete: Cascade)

  @@id([resource_id, competency_id])
  @@map("resource_competencies")
}

model ResourceLehrmittel {
  resource_id   String
  resource      Resource   @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  lehrmittel_id String
  lehrmittel    Lehrmittel @relation(fields: [lehrmittel_id], references: [id], onDelete: Cascade)

  @@id([resource_id, lehrmittel_id])
  @@map("resource_lehrmittel")
}

model ResourceTransversal {
  resource_id    String
  resource       Resource              @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  transversal_id String
  transversal    TransversalCompetency @relation(fields: [transversal_id], references: [id], onDelete: Cascade)

  @@id([resource_id, transversal_id])
  @@map("resource_transversals")
}

model ResourceBne {
  resource_id String
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  bne_id      String
  bne         BneTheme @relation(fields: [bne_id], references: [id], onDelete: Cascade)

  @@id([resource_id, bne_id])
  @@map("resource_bne")
}

// ============================================================
// DOWNLOAD MODEL - Track free resource downloads
// ============================================================

model Download {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())

  // Relations
  user_id     String
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  resource_id String
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([user_id, resource_id])
  @@map("downloads")
}

// ============================================================
// DOWNLOAD TOKEN MODEL - Guest download access tokens
// ============================================================

model DownloadToken {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())

  token          String   @unique // Secure random token for URL
  expires_at     DateTime // Token expiration (7 days from purchase)
  download_count Int      @default(0) // Number of times downloaded (max 3)
  max_downloads  Int      @default(3) // Maximum allowed downloads

  // Relations
  transaction_id String
  transaction    Transaction @relation(fields: [transaction_id], references: [id], onDelete: Cascade)

  @@map("download_tokens")
}

// ============================================================
// WISHLIST MODEL - Save resources for later
// ============================================================

model Wishlist {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())

  // Relations
  user_id     String
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  resource_id String
  resource    Resource @relation(fields: [resource_id], references: [id], onDelete: Cascade)

  @@unique([user_id, resource_id])
  @@map("wishlists")
}
