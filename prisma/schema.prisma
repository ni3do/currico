// Prisma schema for Easy Lehrer - Swiss Teaching Materials Marketplace

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================================
// NEXTAUTH.JS MODELS - Required for OAuth authentication
// ============================================================

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================================
// USER MODEL - Seller Profile
// ============================================================

model User {
  // ============ IDENTITY (System) ============
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // ============ NEXTAUTH.JS REQUIRED FIELDS ============
  name          String? // Display name from OAuth provider
  email         String    @unique
  emailVerified DateTime? // When email was verified
  image         String? // Avatar from OAuth provider

  // ============ PUBLIC PROFILE DATA ============
  display_name String? // Custom pseudonym for privacy (e.g., "Frau M.")
  bio          String?  @db.Text // "About me" - max 500 chars
  subjects     String[] // ["Mathematik", "Deutsch", "NMG"]
  cycles       String[] // ["Zyklus 1", "Zyklus 2", "Zyklus 3"]
  cantons      String[] // ["Zürich", "Bern"] - Swiss cantons

  // ============ PRIVATE ADMIN DATA ============
  password_hash    String? // For credential-based auth
  legal_first_name String? // For invoices/payouts
  legal_last_name  String? // For invoices/payouts
  iban             String? // Swiss IBAN for payouts
  address_street   String?
  address_city     String?
  address_postal   String? // Postal code
  address_country  String  @default("CH")

  // ============ LOGIC/STATUS FIELDS ============
  role            UserRole @default(BUYER)
  is_seller       Boolean  @default(false)
  seller_verified Boolean  @default(false) // Admin-verified seller
  payout_enabled  Boolean  @default(false) // True when IBAN validated
  is_protected    Boolean  @default(false) // Protected users cannot be deleted (e.g., super admin)

  // ============ STRIPE CONNECT ============
  stripe_account_id          String? // Stripe Connect account ID
  stripe_onboarding_complete Boolean @default(false)

  // ============ RELATIONS ============
  accounts     Account[]
  sessions     Session[]
  resources    Resource[]
  transactions Transaction[]

  // Report relations
  reports_submitted Report[] @relation("Reporter")
  reports_received  Report[] @relation("ReportedUser")
  reports_handled   Report[] @relation("ReportHandler")

  @@map("users")
}

enum UserRole {
  BUYER
  SELLER
  SCHOOL
  ADMIN
}

enum ResourceStatus {
  PENDING
  VERIFIED
  REJECTED
}

// ============================================================
// RESOURCE MODEL - Teaching Materials
// ============================================================

model Resource {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  title       String
  description String  @db.Text
  price       Int // Price in cents (e.g., 500 = 5.00 CHF)
  file_url    String // URL to the resource file
  preview_url String? // Preview image URL

  subjects String[]
  cycles   String[]

  is_published Boolean @default(false)
  is_approved  Boolean @default(false) // Admin approval

  // Document verification workflow
  status      ResourceStatus @default(PENDING) // pending, verified, rejected
  is_public   Boolean @default(false) // Only visible to others when true

  // Swiss Quality Checks
  eszett_checked Boolean @default(false) // Checked for ß (should use ss)
  swiss_verified Boolean @default(false) // Admin verified Swiss quality
  language       String  @default("de") // de, fr, it

  // Relations
  seller_id    String
  seller       User          @relation(fields: [seller_id], references: [id])
  transactions Transaction[]
  reports      Report[]

  // Curriculum alignment
  competencies ResourceCompetency[]
  lehrmittel   ResourceLehrmittel[]

  @@map("resources")
}

// ============================================================
// TRANSACTION MODEL - Purchases
// ============================================================

model Transaction {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())

  amount Int // Amount in cents
  status TransactionStatus @default(PENDING)

  // Payment tracking
  stripe_payment_intent_id   String? @unique
  stripe_checkout_session_id String?
  payment_method             String? // "card", "twint", "invoice"

  // Swiss QR-Bill invoice fields
  invoice_number  String? @unique
  invoice_pdf_url String?

  // Fee breakdown (stored for historical accuracy)
  platform_fee_amount  Int? // Platform fee in cents
  seller_payout_amount Int? // Amount to seller in cents

  // Relations
  buyer_id    String
  buyer       User     @relation(fields: [buyer_id], references: [id])
  resource_id String
  resource    Resource @relation(fields: [resource_id], references: [id])

  @@map("transactions")
}

enum TransactionStatus {
  PENDING
  COMPLETED
  REFUNDED
  FAILED
}

// ============================================================
// REPORT MODEL - Content Moderation
// ============================================================

model Report {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  reason      String // Category: "copyright", "inappropriate", "spam", "fraud", "other"
  description String?      @db.Text // Detailed description from reporter
  status      ReportStatus @default(OPEN)
  resolution  String?      @db.Text // Admin notes on resolution

  // What is being reported (either a resource or a user)
  resource_id String?
  resource    Resource? @relation(fields: [resource_id], references: [id], onDelete: SetNull)

  reported_user_id String?
  reported_user    User?   @relation("ReportedUser", fields: [reported_user_id], references: [id], onDelete: SetNull)

  // Who submitted the report
  reporter_id String
  reporter    User   @relation("Reporter", fields: [reporter_id], references: [id], onDelete: Cascade)

  // Admin who handled the report
  handled_by_id String?
  handled_by    User?     @relation("ReportHandler", fields: [handled_by_id], references: [id], onDelete: SetNull)
  handled_at    DateTime?

  @@map("reports")
}

enum ReportStatus {
  OPEN
  IN_REVIEW
  RESOLVED
  DISMISSED
}

// ============================================================
// CONTACT MESSAGE MODEL - Contact Form Submissions
// ============================================================

model ContactMessage {
  id         String   @id @default(cuid())
  created_at DateTime @default(now())

  name    String
  email   String
  phone   String?
  subject String
  message String               @db.Text
  status  ContactMessageStatus @default(NEW)

  @@map("contact_messages")
}

enum ContactMessageStatus {
  NEW
  READ
  REPLIED
  ARCHIVED
}

// ============================================================
// CURRICULUM MODELS - Lehrplan 21 (LP21) & PER
// ============================================================

model Curriculum {
  id      String  @id @default(cuid())
  code    String  @unique // "LP21", "PER"
  name_de String
  name_fr String?
  name_it String?
  region  String // "de-CH", "fr-CH", "it-CH"

  subjects CurriculumSubject[]

  @@map("curricula")
}

model CurriculumSubject {
  id      String  @id @default(cuid())
  code    String // "MA", "D", "NMG", etc.
  name_de String
  name_fr String?
  name_it String?

  curriculum_id String
  curriculum    Curriculum @relation(fields: [curriculum_id], references: [id], onDelete: Cascade)

  competencies CurriculumCompetency[]

  @@unique([curriculum_id, code])
  @@map("curriculum_subjects")
}

model CurriculumCompetency {
  id             String  @id @default(cuid())
  code           String  @unique // "MA.1.A.1", "MA.1.A.2", etc.
  description_de String  @db.Text
  description_fr String? @db.Text
  description_it String? @db.Text
  cycle          Int // 1, 2, or 3

  // Hierarchy levels for LP21
  kompetenzbereich String? // Competency Area (Level 2)
  handlungsaspekt  String? // Action/Theme Aspect (Level 3)

  subject_id String
  subject    CurriculumSubject @relation(fields: [subject_id], references: [id], onDelete: Cascade)

  resources ResourceCompetency[]

  @@map("curriculum_competencies")
}

// ============================================================
// LEHRMITTEL (TEXTBOOK) MODEL - Canton-specific textbooks
// ============================================================

model Lehrmittel {
  id        String   @id @default(cuid())
  name      String
  publisher String
  subject   String // Subject code: "MA", "D", "F", etc.
  cantons   String[] // Which cantons use this textbook
  cycles    Int[] // Which cycles: [1], [1,2], [2,3], etc.

  resources ResourceLehrmittel[]

  @@map("lehrmittel")
}

// ============================================================
// JUNCTION TABLES - Many-to-many relations
// ============================================================

model ResourceCompetency {
  resource_id   String
  resource      Resource             @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  competency_id String
  competency    CurriculumCompetency @relation(fields: [competency_id], references: [id], onDelete: Cascade)

  @@id([resource_id, competency_id])
  @@map("resource_competencies")
}

model ResourceLehrmittel {
  resource_id   String
  resource      Resource   @relation(fields: [resource_id], references: [id], onDelete: Cascade)
  lehrmittel_id String
  lehrmittel    Lehrmittel @relation(fields: [lehrmittel_id], references: [id], onDelete: Cascade)

  @@id([resource_id, lehrmittel_id])
  @@map("resource_lehrmittel")
}
